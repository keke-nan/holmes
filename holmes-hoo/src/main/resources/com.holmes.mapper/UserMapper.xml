<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.holmes.mapper.UserMapper">
    <resultMap id="User" type="com.holmes.model.User">
        <id property="id" column="id"/>
        <result property="user_name" column="userName"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="status" column="status"/>
        <result property="head_pic" column="headPic"/>
        <result property="qq" column="qq"/>
        <result property="account_balance" column="accountBalance"/>
        <result property="sex" column="sex"/>
        <result property="birthday" column="birthday"/>
        <result property="last_login_time" column="lastLoginTime"/>
        <result property="create_by" column="createBy"/>
        <result property="create_time" column="createTime"/>
        <result property="update_by" column="updateBy"/>
        <result property="update_time" column="updateTime"/>
    </resultMap>

    <sql id="base">
        id,
        user_name,
        password,
        salt,
        phone,
        email,
        status,
        head_pic,
        qq,
        account_balance,
        sex,
        birthday,
        last_login_time,
        create_by,
        create_time,
        update_by,
        update_time
    </sql>

    <!--保存用户信息-->
    <insert id="save" parameterType="com.holmes.model.User">
        INSERT INTO tb_user
        (<include refid="base"/>)
        VALUES (
        #{id},
        #{userName},
        #{password},
        #{salt},
        #{phone},
        #{email},
        #{status},
        #{headPic},
        #{qq},
        #{accountBalance},
        #{sex},
        #{birthday},
        #{lastLoginTime},
        #{createBy},
        #{createTime},
        #{updateBy},
        #{updateTime})
    </insert>

    <!--修改用户密码-->
    <update id="updatePwd" parameterType="java.util.Map">
        UPDATE tb_user
        SET password = #{password}
        WHERE user_name = #{userName}
    </update>

    <!--删除用户-->
    <delete id="deleteUser" parameterType= "java.lang.String">
        DELETE FROM tb_user WHERE user_name = #{account}
    </delete>

    <!--根据账户名查询用户-->
    <select id="queryUserByName" parameterType="java.lang.String" resultType="com.holmes.model.User">
        SELECT
        <include refid="base"/>
        FROM
        tb_user
        WHERE user_name = #{userName}
    </select>

    <!--用户登录-->
    <select id="userLogin" parameterType="java.lang.String" resultType="com.holmes.model.User">
        SELECT
        <include refid="base"/>
        FROM
        tb_user
        WHERE
        user_name = #{account}
        OR phone = #{account}
        OR email = #{account}
    </select>

    <!--查询用户信息-->
    <select id="queryUser" parameterType="java.lang.String" resultType="java.util.Map">
        SELECT
            id,
            user_name,
            phone,
            email
        FROM tb_user
        WHERE  user_name = #{account}
    </select>



</mapper>